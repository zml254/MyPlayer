<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/item_album_newest_album_image"
        android:layout_width="match_parent"
        android:src="@mipmap/easenet"
        android:background="#000000"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_album_newest_album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:text="加载中"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@id/item_album_newest_playlist"
        app:layout_constraintLeft_toLeftOf="@id/item_album_newest_playlist"/>

    <ImageView
        android:id="@+id/item_album_newest_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/playlist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/item_album_newest_album_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_goneMarginStart="15dp"
        android:textSize="12sp"
        android:text="加载中"
        app:layout_constraintTop_toTopOf="@id/item_album_newest_playlist"
        app:layout_constraintBottom_toBottomOf="@id/item_album_newest_playlist"
        app:layout_constraintLeft_toRightOf="@id/item_album_newest_playlist"
        android:layout_marginStart="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp" />



</androidx.constraintlayout.widget.ConstraintLayout>